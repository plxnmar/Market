@model Market.Domain.ViewModels.Account.RegisterViewModel

<div class="row justify-content-center">
	<div class="col-4">
		<form method="post" asp-controller="Account" asp-action="Register">
			<div>
				<h4 class="text-center">Регистрация</h4>
			</div>
			<div class="mb-3">
				<label for="Name" class="form-label">Логин</label>
				<input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label for="Password" class="form-label">Пароль</label>
				<input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label for="PasswordConfirm" class="form-label">Повторите пароль</label>
				<input asp-for="PasswordConfirm" type="password" class="form-control" id="exampleInputPassword2">
				<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
			</div>
			<div class="text-center">
				<button asp-action="Register" asp-controller="Account" type="submit" class="btn btn-primary">Отправить</button>
			</div>
		</form>
	</div>
</div>
